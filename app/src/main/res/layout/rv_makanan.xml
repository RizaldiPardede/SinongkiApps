<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="243dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/gray2"
    app:cardCornerRadius="32dp"
    android:layout_marginRight="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/ic_makanan"
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:src="@drawable/makanan1"
            android:scaleType="fitStart"/>
        <TextView
            android:id="@+id/txt_menu_makanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nasi Goreng"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            android:paddingStart="15dp"
            android:paddingTop="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Makanan"
            android:textSize="8sp"
            android:textStyle="normal"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            android:paddingStart="15dp"
            android:paddingTop="5dp"/>
        <TextView
            android:id="@+id/harga_makanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IDR15.000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            android:paddingStart="15dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_pesan_makanan"
                android:layout_width="60dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/round"
                android:text="Pesan"
                android:textColor="@color/black"
                android:backgroundTint="@color/yellow"
                android:layout_marginEnd="15dp"/>
            <ImageView
                android:id="@+id/ic_substract_makanan"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_substract"/>
            <TextView
                android:id="@+id/count_makanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="7dp"/>
            <ImageView
                android:id="@+id/ic_add_makanan"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_add"
                android:background="@color/yellow"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>